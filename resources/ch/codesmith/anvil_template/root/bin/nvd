#!/usr/bin/env bash

set -eo pipefail

SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)

PROJECT_CLASS_PATH=$(
  cd "${SCRIPT_DIR}/.."
  clojure -Spath
)

(
  cd "${SCRIPT_DIR}"/../nvd || exit 1
  clojure -J-Dclojure.main.report=stderr -M -m nvd.task.check "" "${PROJECT_CLASS_PATH}"
)
